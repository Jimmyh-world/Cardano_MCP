{
  "name": "cardano_mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Cardano blockchain integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.js",
    "start:sse": "MCP_TRANSPORT=sse node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:sse": "MCP_TRANSPORT=sse nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "check-types": "tsc --noEmit",
    "mock-server": "ts-node src/mock/mock-server.ts",
    "validate": "npm-run-all --parallel check-types lint test"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "keywords": [
    "cardano",
    "blockchain",
    "mcp",
    "ai",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@octokit/rest": "^21.1.1",
    "@types/jsdom": "^21.1.7",
    "@types/marked": "^5.0.2",
    "@types/turndown": "^5.0.5",
    "axios": "^1.8.1",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "jsdom": "^26.0.0",
    "marked": "^15.0.7",
    "pg": "^8.11.3",
    "pgvector": "^0.1.7",
    "turndown": "^7.2.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/pg": "^8.11.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "nodemon": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
